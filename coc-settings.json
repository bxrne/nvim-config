{
	"languageserver": {
		"go": {
			"command": "gopls",
			"rootPatterns": ["go.work", "go.mod", ".git/"],
			"filetypes": ["go"]
		},
		"tsserver": {
			"command": "typescript-language-server",
			"args": ["--stdio"],
			"filetypes": [
				"typescript",
				"typescriptreact",
				"javascript",
				"javascriptreact"
			],
			"rootPatterns": ["package.json", "tsconfig.json", ".git"]
		},
		"groovy": {
			"command": "groovy-language-server",
			"filetypes": ["groovy"]
		},
		"clangd": {
			"command": "clangd",
			"filetypes": ["c", "cpp", "objc", "objcpp"],
			"rootPatterns": ["compile_commands.json", "compile_flags.txt", ".git/"]
		},
		"pyright": {
			"command": "pyright-langserver",
			"args": ["--stdio"],
			"filetypes": ["python"],
			"rootPatterns": [
				"setup.py",
				"setup.cfg",
				"pyproject.toml",
				"requirements.txt",
				".git/"
			]
		}
	},
	"suggest.noselect": false,
	"go.useLanguageServer": true,
	"go.goplsOptions": {
		"staticcheck": true
	}
}
